<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <context-param>
        <description>Setaria 配置实现类</description>
        <param-name>setaria.config.implementation</param-name>
        <param-value>com.weghst.setaria.client.DistributedSetariaConfig</param-value>
    </context-param>
    <context-param>
        <description>ZooKeeper 连接字符串</description>
        <param-name>setaria.config.zookeeper.connectString</param-name>
        <param-value>127.0.0.1:2181</param-value>
    </context-param>
    <context-param>
        <description>[可选配置] ZooKeeper Session 超时时间(毫秒), 默认60秒</description>
        <param-name>setaria.config.zookeeper.sessionTimeout</param-name>
        <param-value>60000</param-value>
    </context-param>
    <context-param>
        <description><![CDATA[Setaria 在 ZooKeeper 管理配置的根目录, 需要和服务器的
$setaria.zookeeper.basePath$ 配置一样, 默认值(/setaria)]]></description>
        <param-name>setaria.config.zookeeper.basePath</param-name>
        <param-value>/setaria</param-value>
    </context-param>
    <context-param>
        <description>Setaria 所管理的应用名称</description>
        <param-name>setaria.config.app</param-name>
        <param-value>setaria.samples</param-value>
    </context-param>
    <context-param>
        <description>Setaria 所管理的应用对应的环境</description>
        <param-name>setaria.config.env</param-name>
        <param-value>test</param-value>
    </context-param>

    <listener>
        <listener-class>com.weghst.setaria.client.web.SetariaConfigContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:spring-setaria-samples.xml</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>